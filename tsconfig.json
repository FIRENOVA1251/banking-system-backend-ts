        "strict": true,
        "esModuleInterop": true,
        "lib": ["es2015"],
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
